		Кодировка = Ответ.Кодировка;
	КонецЕсли;

	ЧтениеТекста = Новый ЧтениеТекста(РаспаковатьОтвет(Ответ).ОткрытьПотокДляЧтения(), Кодировка);
	Текст = ЧтениеТекста.Прочитать();
	ЧтениеТекста.Закрыть();

	Если Текст = Неопределено Тогда
		Текст = "";
	КонецЕсли;

	Возврат Текст;

